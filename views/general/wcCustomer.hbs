<div class='container'>
  <br /><br />
  <h2>Welcome, <span class='welcomeName'> {{user.firstName}}!</span></h2>
  <br /><br />

  <h4> Shopping Cart</h4>
  <p class='itmsnumCart'>({{itmsnumCart}}) items in cart</p>
  <br />
  {{#if hasDat}}
    <div class='tableContainer'>
      <table class='table table-sm table-bordered'>
        <thead class='thead-dark'>
          <tr>
            <th scope='col'>#</th>
            <th scope='col'>Title</th>
            <th scope='col'>Price</th>
            <th scope='col'>Image</th>
            <th scope='col'>Quantity</th>
            <th scope='col'>Total price</th>

          </tr>
        </thead>
        <tbody>
          {{#each docs}}
            <tr>
              <th>{{@index}}</th>
              <td>{{title}}</td>
              <td>{{price}}</td>
              <td><img class='tableimg tableimg2' src='{{imageUrl}}' /></td>
              <td class='quantityRowTb'>
                <p class='quantChange quantChange1'>-</p>
                <p class='qVals'>{{quantity}} </p>
                <p class='quantChange quantChange2'>+</p>
                <div>
                  <a
                    href='/customer/updateCart/:{{prodId}}/:{{quantity}}'
                    class='loadDtBtn hideIt'
                  >Update</a>
                </div>
              </td>
              <td>{{totalPrice}}</td>

            </tr>
          {{/each}}
        </tbody>

      </table>
    </div>
    <br />
    <p class='totalCostPp'>
      Total:
      <span class='colredd'> ${{totalOverallCost}}</span>
    </p>
    <a href='/customer/checkout' class='loadDtBtn addCartBtn'>Proceed to checkout</a>
  {{else}}
    <br />
    <br />
    <p> Please add items to cart to proceed to checkout.</p>
  {{/if}}
  <br />
  <br />
  <div class='LoadingAction'>
    <div class='sendtoMid'>
      <div class='loader'></div>
    </div>
  </div>
  <script src='/js/script.js'></script>
</div>